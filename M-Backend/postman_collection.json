{
  "info": {
    "name": "DJ Party Mode API",
    "description": "Complete API collection for testing DJ Party Mode backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "roomId",
      "value": "",
      "type": "string"
    },
    {
      "key": "songId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Rooms",
      "item": [
        {
          "name": "Create Room",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('roomId', jsonData.data._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Room\",\n  \"mode\": \"democratic\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/rooms",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms"]
            }
          }
        },
        {
          "name": "Get Room",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/rooms/{{roomId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms", "{{roomId}}"]
            }
          }
        },
        {
          "name": "Join Room",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/rooms/ROOMCODE/join",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms", "ROOMCODE", "join"]
            }
          }
        },
        {
          "name": "Get Room Queue",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/rooms/{{roomId}}/queue",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms", "{{roomId}}", "queue"]
            }
          }
        },
        {
          "name": "Get Room History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/rooms/{{roomId}}/history",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms", "{{roomId}}", "history"]
            }
          }
        },
        {
          "name": "Leave Room",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/rooms/{{roomId}}/leave",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms", "{{roomId}}", "leave"]
            }
          }
        },
        {
          "name": "Close Room",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/rooms/{{roomId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms", "{{roomId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Songs",
      "item": [
        {
          "name": "Add Song",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('songId', jsonData.data._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"spotifyId\": \"3n3Ppam7vgaVa1iaRUc9Lp\",\n  \"title\": \"Mr. Brightside\",\n  \"artist\": \"The Killers\",\n  \"album\": \"Hot Fuss\",\n  \"durationMs\": 222973,\n  \"albumArt\": \"https://i.scdn.co/image/ab67616d0000b273ccdddd46119a4ff53eaf1f5d\",\n  \"previewUrl\": \"https://p.scdn.co/mp3-preview/...\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/rooms/{{roomId}}/songs",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms", "{{roomId}}", "songs"]
            }
          }
        },
        {
          "name": "Upvote Song",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/rooms/{{roomId}}/songs/{{songId}}/upvote",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms", "{{roomId}}", "songs", "{{songId}}", "upvote"]
            }
          }
        },
        {
          "name": "Downvote Song",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/rooms/{{roomId}}/songs/{{songId}}/downvote",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms", "{{roomId}}", "songs", "{{songId}}", "downvote"]
            }
          }
        },
        {
          "name": "Skip Song",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/rooms/{{roomId}}/songs/{{songId}}/skip",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms", "{{roomId}}", "songs", "{{songId}}", "skip"]
            }
          }
        },
        {
          "name": "Remove Song",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/rooms/{{roomId}}/songs/{{songId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms", "{{roomId}}", "songs", "{{songId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "health"]
        }
      }
    }
  ]
}
